<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diego.letournee.Principal">

    <TextView
        android:id="@+id/tv_pbls_magicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Pueblos Magicos del estado de Hidalgo"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_huascap"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Huasca de Ocampo"
                android:background="@drawable/fondo2huasca"
                android:textStyle="normal|italic"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_MinChicop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Mineral del Chico"
                android:background="@drawable/mineraldelchico"
                android:textSize="30sp"
                android:textColor="@android:color/background_light"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_realMontep"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_pbls_magicos"
                android:text="Real del Monte"
                android:background="@drawable/realdelmonte"
                android:textSize="30sp"
                android:textColor="@android:color/background_light"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_Huichapanp"
                android:layout_width="match_parent"
                android:text="Huichapan"
                android:background="@drawable/huichapan"
                android:layout_height="200dp"
                android:textAlignment="center"
                android:textStyle="normal|italic"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_tecozautlap"
                android:layout_width="match_parent"
                android:text="Tecozautla"
                android:background="@drawable/tecozautla"
                android:layout_height="200dp"
                android:textSize="30sp"
                android:textStyle="normal|italic"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
